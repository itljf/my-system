@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model L.Web.Pages.Todo.EditModel
@{
    Layout = null;
}
<form method="post" asp-page="/Todo/Edit">
    <abp-modal>
        <abp-modal-header title="@(Model.info.Id==0?"添加待办":"编辑待办")"></abp-modal-header>
        <abp-modal-body>
            <input type="hidden" asp-for="info.Id" />
            <div class="form-group row mb-6">
                <div class="col-2 col-form-label text-right">标题：</div>
                <div class="col-10">
                    <input class="form-control" asp-for="info.Title" />
                </div>
            </div>
            <div class="form-group row mb-6">
                <div class="col-2 col-form-label text-right">类型：</div>
                <div class="col-10 col-form-label">
                    <label class="form-check form-check-custom form-check-inline form-check-solid is-valid mb-3">
                        <input class="form-check-input" type="radio" asp-for="info.Mark" value="0">
                        <span class="fw-semibold ps-2 fs-6">未开始</span>
                    </label>
                    <label class="form-check form-check-custom form-check-inline form-check-solid is-valid mb-3">
                        <input class="form-check-input" type="radio" asp-for="info.Mark"  value="1">
                        <span class="fw-semibold ps-2 fs-6">进行中</span>
                    </label>
                    <label class="form-check form-check-custom form-check-inline form-check-solid is-valid mb-3">
                        <input class="form-check-input" type="radio" asp-for="info.Mark"  value="2">
                        <span class="fw-semibold ps-2 fs-6">已完成</span>
                    </label>
                    <label class="form-check form-check-custom form-check-inline form-check-solid is-valid mb-3">
                        <input class="form-check-input" type="radio" asp-for="info.Mark"  value="3">
                        <span class="fw-semibold ps-2 fs-6">已取消</span>
                    </label>
                </div>
            </div>
            <div class="form-group row mb-6">
                <div class="col-2 col-form-label text-right">备注：</div>
                <div class="col-10">
                    <textarea class="form-control" rows="3" asp-for="info.Cnt"></textarea>
                </div>
            </div>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
