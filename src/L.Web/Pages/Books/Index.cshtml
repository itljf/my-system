@page
@model L.Web.Pages.Books.IndexModel
@{
    ViewBag.Title = "图书信息";
}
这里是图书信息，测试post请求等
<div>
    <a href="~/Books/download" class="btn btn-primary mb-4">测试下载文件</a>
    <a href="javascript:;" id="js-put" class="btn btn-primary mb-4">测试put请求</a>
    <a href="javascript:;" id="js-post-1" class="btn btn-primary mb-4">测试post不同参数请求测试1</a>
    <a href="javascript:;" id="js-post-2" class="btn btn-primary mb-4">测试post不同参数请求测试2</a>

</div>


@section scripts
{
    <script>
        $("#js-put").click(function () {
            $.ajax({
                type: "PUT",
                url: "/Books",
                data: { id: 1, name: "测试put请求" },
                success: function (data) {
                    alert(data);
                }
            });
        });
        $("#js-post-1").click(function () {
            $.ajax({
                type: "post",
                url: "/Books/Test1",
                data: { id: 1 },
                success: function (data) {
                    alert(data);
                }
            });
        });
        $("#js-post-2").click(function () {
            $.ajax({
                type: "post",
                url: "/Books/Test2",
                data: { id: 1, name: "测试post请求" },
                success: function (data) {
                    alert(data);
                }
            });
        });
    </script>
}